{
  "name": "Privashield",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Protects users from leaking sensitive data to AI tools.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["://chat.openai.com/", "://claude.ai/"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
